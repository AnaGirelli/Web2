<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro | Verdear</title>
    <link rel="icon" type="logo/png" href="/logo_simplificada.png"/>
    <style>
        :root {
            --color-primary: #528b3a; /* Verde escuro do logo */
            --color-secondary: #f39c12; /* Laranja do botão ENTRAR */
            --color-bg-dark: #386641; /* Verde do fundo lateral */
            --color-bg-light: #f7f7f7; /* Cor de fundo da caixa de login */
            --color-text-dark: #2c3e50;
            --color-text-light: #555;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: var(--color-bg-dark);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            overflow: hidden;
            position: relative;
        }

        .background-container::before, 
        .background-container::after {
            content: ''; 
            position: absolute;
            width: 300px;
            height: 100vh;
            background-color: var(--color-bg-dark);
        }

        .background-container::before {
            left: 0;
            top: 0;
            clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
            z-index: 0;
        }

        .background-container::after {
            right: 0;
            top: 0;
            clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
            z-index: 0;
        }

        .cadastro-box {
            background-color: #fff;
            padding: 40px;
            padding-top: 80px;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 400px;
            width: 90%;
            z-index: 1;
            position: relative;
        }

        .logo-container {
            margin-bottom: 20px;
            padding-bottom: 20px;
        }

        .logo {
            max-width: 180px;
            height: auto;
            margin-top: -80px;
            position: relative; 
            z-index: 2;
        }

        .cadastro-title {
            color: var(--color-primary);
            font-size: 1.8em;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: left;
        }

        .input-group {
            margin-bottom: 20px;
        }

        .input-group input,
        .input-group select {
            width: 100%;
            padding: 15px 20px;
            border: 1px solid #ccc;
            border-radius: 50px;
            font-size: 1em;
            box-sizing: border-box;
            outline: none;
            transition: border-color 0.3s;
        }

        .input-group input:focus,
        .input-group select:focus {
            border-color: var(--color-primary);
        }

        .btn-cadastrar {
            width: 100%;
            background-color: var(--color-secondary);
            color: white;
            padding: 15px 0;
            border: none;
            border-radius: 50px;
            font-size: 1.1em;
            font-weight: bold;
            cursor: pointer;
            margin-top: 10px;
            transition: background-color 0.3s;
        }

        .btn-cadastrar:hover {
            background-color: #e68a00;
        }

        .link-login {
            display: block;
            margin-top: 25px;
            color: var(--color-text-light);
            font-size: 1em;
            text-decoration: none;
            font-style: italic;
            transition: color 0.3s;
        }

        .link-login:hover {
            color: var(--color-primary);
        }

        .error {
            color: red;
            margin-bottom: 15px;
            font-weight: bold;
            text-align: left;
        }
    </style>
    <script>
        // Validação e formatação de CPF no frontend
        document.addEventListener('DOMContentLoaded', function() {
            const cpfInput = document.getElementById('cpf');
            
            // Permite apenas números
            cpfInput.addEventListener('input', function(e) {
                this.value = this.value.replace(/\D/g, '');
            });
            
            // Validação antes de enviar
            const form = document.querySelector('.cadastro-form');
            form.addEventListener('submit', function(e) {
                const cpf = cpfInput.value.replace(/\D/g, '');
                if (cpf.length !== 11) {
                    e.preventDefault();
                    alert('CPF deve conter exatamente 11 dígitos numéricos.');
                    cpfInput.focus();
                    return false;
                }
            });
        });
    </script>
</head>
<body>
    <div class="background-container">
        <div class="cadastro-box">
            <div class="logo-container">
                <img src="/logo.png" alt="Logo Verdear" class="logo">
            </div>
            
            <h2 class="cadastro-title">Cadastre-se</h2>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error">
                    <%= error %>
                </div>
            <% } %>

            <form action="/cadastrar" method="POST" class="cadastro-form">
                <div class="input-group">
                    <input type="text" id="nome_pessoa" name="nome_pessoa" placeholder="Nome completo" required>
                </div>

                <div class="input-group">
                    <input type="text" id="cpf" name="cpf" placeholder="CPF (apenas números)" maxlength="11" pattern="[0-9]{11}" required>
                </div>

                <div class="input-group">
                    <input type="email" id="email" name="email" placeholder="E-mail" required>
                </div>

                <div class="input-group">
                    <input type="password" id="senha" name="senha" placeholder="Senha" required>
                </div>

                <div class="input-group">
                    <select id="tipo_usuario" name="tipo_usuario" required>
                        <option value="">Selecione o tipo de usuário</option>
                        <option value="CLIENTE">Cliente</option>
                        <option value="VENDEDOR">Vendedor</option>
                    </select>
                </div>
                
                <button type="submit" class="btn-cadastrar">CADASTRAR</button>
            </form>
            
            <a href="/" class="link-login">Voltar ao Login</a>
        </div>
    </div>
</body>
</html>

