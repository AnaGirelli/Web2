{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node.js App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "restart": false,
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect"
            ],
            "outputCapture": "std",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node.js (Break on Start)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "restart": false,
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk"
            ],
            "outputCapture": "std",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 9229,
            "restart": false,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true
        }
    ]
}

